<?xml version="1.0" encoding="UTF-8"?> 

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper  namespace="BoardMapper">

	<!-- 게시글 좋아요 삭제 -->
	<delete id="deleteLike" parameterType="int">
		DELETE FROM `like`
		WHERE board_idx = #{board_idx}
	</delete>

	<!-- 게시글 좋아요 추가 -->
	<insert id="addLike" parameterType="map">
		INSERT INTO `like` (board_idx, user_nick) VALUES (#{board_idx}, #{user_nick})
	</insert>

	<!-- 게시글 삭제 -->
	<delete id="delete" parameterType="int">
		DELETE FROM `board`
		WHERE board_idx = #{board_idx}
	</delete>

	<!-- 게시글 수정 -->
	<update id="update" parameterType="Board">
		UPDATE `board`
		SET
			name = #{name},
			category = #{category},
			content = #{content}
		WHERE board_idx = #{board_idx}
	</update>

	<!-- 게시글 번호 찾기 -->
	<select id="findByIdx" parameterType="int" resultType="Board">
		SELECT 
			*
		FROM `board`
		WHERE board_idx = #{board_idx}
	</select>

	<!-- 전체 게시글 찾기 -->
	<select id="findAll" resultType="Board">
		SELECT 
			*
		FROM `board`
	</select>

	<!-- 유저 찾기 -->
	<select id="findById" parameterType="String" resultType="Board">
		SELECT 
			*
		FROM `board`
		WHERE user_id = #{user_id}
	</select>

	<!-- 닉네임 찾기 -->
	<select id="findByNick" parameterType="String" resultType="Board">
		SELECT 
			*
		FROM `board`
		WHERE user_nick = #{nick}
	</select>
	
	<!-- 게시글 추가  -->
	<insert id="save" parameterType="Board">
		INSERT INTO `board`
		(
			user_nick,
			name,
			category,
			content,
			created_date
		)
		VALUES
		(    
			#{user_nick},
			#{name},
			#{category},
			#{content},
			sysdate()
		)
	</insert>
	
	
	</mapper>